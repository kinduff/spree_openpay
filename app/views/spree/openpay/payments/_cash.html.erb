<img class='conekta-oxxo' src='https://webadictos.com/media/2013/06/paynet-logo.jpg'></img>
<h1 id='oxxo-title'><%= t("conekta.cash.payment_title") %></h1>

<table id='conekta_cash' class='payment-information'>
  <thead>
    <tr>
      <th colspan='2'> <%= t('conekta.order_number', number: @order.number) %> </th>
    </tr>
    <tr>
      <th colspan='2'> <%= t('conekta.cash.bar_code') %> </th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan='2'> <%= raw t('conekta.cash.payment_message') %> </td>
    </tr>
  </tfoot>
  <tbody>
    <tr>
      <td class='align-center' id='barcode'>
        <%= image_tag(@order_details['payment_method']['barcode_url']) %>
        <div><%= @order_details['payment_method']['barcode'] %></div>
        <% merchant_id = @order.payments.valid.last.payment_method.preferred_openpay_id %>
        <div><%= link_to t('conekta.cash.payment_bill'), "https://sandbox-dashboard.openpay.mx/paynet-pdf/#{merchant_id}/#{@order_details['payment_method']['reference']}", target: '_blank' %></div>
      </td>
    </tr>
    <tr>
      <td class='align-right'>
        <b><%= t('conekta.total') %></b>
        <% if @order.currency != 'MXN' %>
          <%= Spree::Openpay::Exchange.new(@order.total, @order.currency).amount_exchanged  %> MXN
        <% else %>
          <%= @order.display_total.to_html%>
        <% end%>
      </td>
    </tr>
  </tbody>
</table>
